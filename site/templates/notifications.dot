{{? !it.length }}
<p>Woohoo! You're all caught up!</p>
{{?}}

{{~ it : notif }}
	<div class="card clickable" *click="mark_as_read('{{= notif.id }}')">
		<div class="card-inner">
			<h3>{{= notif.title }}</h3>
			</p>{{= notif.body.replaceAll('\n', '<br>') }}</p>
			<span class="suppress">
				Sent {{= date.elapsed(notif.created) }}
			</span>
		</div>
	</div>
{{~}}
